@page
@model LogoutModel
@{
    ViewData["Title"] = "Wylogowywanie";
}

<header class="mx-auto">
    <h1>@ViewData["Title"]</h1>
    @{
        if (User.Identity?.IsAuthenticated ?? false)
        {
            <form class="form-inline mt-5 mb-5" asp-area="Identity" asp-page="/Account/Logout"
                  asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <button type="submit" class="btn btn-primary p-5">Wyloguj</button>
            </form>
        }
        else
        {
            <d class="alert alert-success">Wylogowano cię z aplikacji</d>
        }
    }
</header>
