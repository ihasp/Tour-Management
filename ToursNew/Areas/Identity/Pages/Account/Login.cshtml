@page
@model LoginModel

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">@TempData["Message"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}
@{
    ViewData["Title"] = "Log in";
}

<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-4">
        <section>
            <form id="account" method="post">
                <h2>Use a local account to log in.</h2>
                <hr/>
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <label asp-for="Input.Email" class="form-label">Email</label>
                    <input asp-for="Input.Email" class="form-control" 
                           autocomplete="username" aria-required="true" placeholder="name@example.com"/>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <label asp-for="Input.Password" class="form-label">Password or OTP</label>
                    <input asp-for="Input.Password" class="form-control" 
                           autocomplete="current-password" aria-required="true" placeholder="password"/>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <br/>
                <div class="form-floating mb-3">
                    <label asp-for="Input.Captcha" class="form-label"><img src="@Url.Content("~/cap2.jpg")"/></label>
                    <input asp-for="Input.Captcha" class="form-control" aria-required="true" placeholder="Wynik/Result"></input>
                    <span asp-validation-for="Input.Captcha" class="text-danger"></span>
                </div>
                
                @* <div class="form-floating mb-3"> *@
                @*     <label>One-time password</label> *@
                @*     <input class="form-control" autocomplete="otp" aria-required="true" placeholder="Single-use password"/> *@
                @*     <input class="form-control" disabled placeholder="a = 15"/> *@
                @* </div> *@
                
                <div class="checkbox mb-3 ml-3">
                    <label asp-for="Input.RememberMe" class="form-label">
                        <input class="form-check-input" asp-for="Input.RememberMe"/>
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                </div>
                <div class="mt-4">
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>    
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                    </p>
                    <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}