@model ToursNew.ViewModels.ReservationViewModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Usuń</h1>

<h3>Czy napewno chcesz usunąć rezerwację?</h3>
<div>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IDClient)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IDClient)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IDTrip)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IDTrip)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ReservationDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ReservationDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.paymentMethod)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.paymentMethod)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.paymentStatus)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.paymentStatus)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="IDReservation"/>
        <input type="submit" value="Usuń" class="btn btn-outline-danger"/>
        <a class="btn btn-outline-dark" asp-action="Index">Powrót</a>
    </form>
</div>