@model IEnumerable<Tours.Models.Client>

@{
    ViewData["Title"] = "Index";
}

<h1>Klienci</h1>

<p>
    <a class="btn btn-default btn-outline-dark" asp-action="Create">Dodaj</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Adult)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Adult)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IDClient">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IDClient">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IDClient">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
